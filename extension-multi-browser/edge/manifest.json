{
  "manifest_version": 3,
  "name": "FocusBubble - Focus Timer & Distraction Tracker",
  "version": "1.0.0",
  "description": "Stay focused with a floating timer bubble. Track distractions, build focus habits, and boost productivity with AI-powered insights.",
  
  "_comment_edge": "Edge is Chromium-based and uses the same manifest structure as Chrome",
  
  "icons": {
    "16": "../chrome/icons/icon16.png",
    "32": "../chrome/icons/icon32.png",
    "48": "../chrome/icons/icon48.png",
    "128": "../chrome/icons/icon128.png"
  },

  "action": {
    "default_popup": "../chrome/popup/index.html",
    "default_icon": {
      "16": "../chrome/icons/icon16.png",
      "32": "../chrome/icons/icon32.png",
      "48": "../chrome/icons/icon48.png",
      "128": "../chrome/icons/icon128.png"
    }
  },

  "background": {
    "service_worker": "../chrome/background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["../chrome/contentScript.js"],
      "css": ["../shared/styles.css"],
      "run_at": "document_end"
    }
  ],

  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "tabs"
  ],

  "host_permissions": [
    "https://api.openai.com/*",
    "https://api.anthropic.com/*"
  ],

  "commands": {
    "start-timer": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Start focus timer"
    },
    "stop-timer": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Stop focus timer"
    }
  }
}
