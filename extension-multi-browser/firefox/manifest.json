{
  "manifest_version": 3,
  "name": "FocusBubble - Focus Timer & Distraction Tracker",
  "short_name": "FocusBubble",
  "version": "1.0.0",
  "description": "Stay focused with a floating timer bubble. Track distractions, build focus habits, and boost productivity with AI-powered insights.",
  "author": "Krubles Team",
  "homepage_url": "https://github.com/C-Elkins/focusbubble",
  "icons": {
    "16": "../chrome/icons/icon16.png",
    "32": "../chrome/icons/icon32.png",
    "48": "../chrome/icons/icon48.png",
    "128": "../chrome/icons/icon128.png"
  },
  "action": {
    "default_popup": "../chrome/popup/index.html",
    "default_title": "FocusBubble - Start Focus Session",
    "default_icon": {
      "16": "../chrome/icons/icon16.png",
      "32": "../chrome/icons/icon32.png",
      "48": "../chrome/icons/icon48.png",
      "128": "../chrome/icons/icon128.png"
    },
    "browser_style": false
  },
  "background": {
    "scripts": ["../chrome/background.js"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["../chrome/contentScript.js"],
      "css": ["../shared/styles.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "commands": {
    "start-timer": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F",
        "linux": "Ctrl+Shift+F"
      },
      "description": "Start focus timer"
    },
    "stop-timer": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S",
        "linux": "Ctrl+Shift+S"
      },
      "description": "Stop focus timer"
    },
    "pause-timer": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P",
        "linux": "Ctrl+Shift+P"
      },
      "description": "Pause/Resume focus timer"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "../chrome/icons/*.png",
        "../shared/styles.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "focusbubble@krublesteam.com",
      "strict_min_version": "109.0"
    }
  }
}
